<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/time_inday"
            android:padding="6dp"
            android:text="2 AM - 4 AM"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dd"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/duongkedoc"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_below="@+id/dd"
                    android:id="@id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point"/>
                <TextView
                    android:id="@+id/dd1"
                    android:layout_below="@id/icon2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/duongkedoc"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@id/icon3"
                    android:layout_below="@+id/dd1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/point"/>
                <TextView
                    android:layout_below="@id/icon3"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/duongkedoc"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_background5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/person_icon"
                android:padding="4dp"
                android:backgroundTint="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/img_user_inday"
                />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/text_user_inday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="UserName"
                    android:gravity="center"
                    android:fontFamily="@font/poppinssemibold"/>
        </LinearLayout>
</LinearLayout>