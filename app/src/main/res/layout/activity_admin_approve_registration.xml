<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".gym.User_screen.User_PT_Inf_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_userupdate"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/cnhat_boduoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/profile_pic_image_view_userupdate_apporve"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_circle"
                android:padding="4dp"
                android:src="@drawable/person_icon" />

            <TextView
                android:id="@+id/User_user_inormation_update_apporve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_pic_image_view_userupdate_apporve"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Username"
                android:textSize="18sp" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="INFORMATION CV PTRAINER"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Experience year"
                android:layout_margin="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/User_Name_exper_update_pt_inormation_apporve"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gender"
                android:layout_margin="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/User_Gender_exper_update_pt_inormation_apporve"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Phone" />
                <TextView
                    android:id="@+id/User_phone_userUpdate_inormation_apporve"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/rednhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Email" />
                <TextView
                    android:id="@+id/User_email_userUpdate_inormation_apporve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationView"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    app:lottie_rawRes="@raw/ptupdate"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

            </LinearLayout>

            <!-- NumberPicker ngang -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/purple_nhat"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="BMI"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/User_BMI_userUpdate_inormation_apprpve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/text"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="0.0" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Cretificate"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/User_cretificate_update_pt_inormation_img_apporve"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/person_icon" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:background="@drawable/cnhat_boca"
            android:backgroundTint="@color/purple_nhat"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textprize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/User_prize_update_pt_inormation1_apporve"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_gravity="center"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/User_prize_update_pt_inormation_img1_apporve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/person_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_margin="10dp"
                android:id="@+id/User_prize_update_pt_inormation2_apporve"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_gravity="center"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/User_prize_update_pt_inormation_img2_apporve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/person_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_margin="10dp"
                android:id="@+id/User_prize_update_pt_inormation3_apporve"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_gravity="center"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/User_prize_update_pt_inormation_img3_apporve"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="4dp"
                android:src="@drawable/person_icon" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_update_userPT_profile_Accept"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lavender"
                android:text="Accept"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/baseline_add_24" />
            <Button
                android:id="@+id/btn_update_userPT_profile_Deny"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bmi_underweight"
                android:text="Deny"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/baseline_add_24" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>