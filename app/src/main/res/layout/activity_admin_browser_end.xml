<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whirk"
    android:layout_margin="10dp"
    android:padding="5dp"
    tools:context=".gym.Admin.Admin_Browser_End_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_broser"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:text="Approve book orders"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:background="@drawable/rounded_background2"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/name_user_admin_brower_PT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="Name PT"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name_user_admin_brower_phone_PT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="Phone"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinsregular" />
            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/person_icon"
                android:padding="4dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/admin_broser_imgPT"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/person_icon"
                android:padding="4dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/admin_broser_imgUS"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/name_user_admin_brower_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="Name PT"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/name_user_admin_brower_phone_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="Phone"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppinsregular" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="@drawable/cnhat_boca"
            android:backgroundTint="@color/purple_nhat"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/baseline_turned_in_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time unit"
                android:id="@+id/text1"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/Time_book_ptIn_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0985664533"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="15sp"
                android:layout_marginLeft="25dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/cnhat_boca"
            android:backgroundTint="@color/purple_nhat"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/baseline_access_time_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:gravity="center"
                android:text="Time book (Month)"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TimeMonth_book_ptIn_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppinssemibold"
                android:gravity="center"
                android:text="0985664533"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/cnhat_boduoi"
            android:backgroundTint="@color/purple_nhat"
            android:gravity="center"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_attach_money_24"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="15sp"
                android:layout_marginLeft="25dp"
                />
            <TextView
                android:id="@+id/Money_book_ptIn_User"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/category"
                android:fontFamily="@font/poppinssemibold"
                android:text="10000"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                />


        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_margin="10dp"
           android:layout_gravity="center"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/dd"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/duongkedoc"
                       android:layout_width="1dp"
                       android:layout_height="match_parent"
                       />
                   <ImageView
                       android:layout_below="@+id/dd"
                       android:id="@id/icon2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/point"/>
                   <TextView
                       android:id="@+id/dd1"
                       android:layout_below="@id/icon2"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/duongkedoc"
                       android:layout_width="1dp"
                       android:layout_height="match_parent"
                       />
                   <ImageView
                       android:id="@id/icon3"
                       android:layout_below="@+id/dd1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/point"/>
                   <TextView
                       android:layout_below="@id/icon3"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/duongkedoc"
                       android:layout_width="1dp"
                       android:layout_height="match_parent"
                       />
               </RelativeLayout>


           </LinearLayout>
           <TextView
               android:id="@+id/time_inday_book"
               android:gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_toRightOf="@+id/dd1"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:fontFamily="@font/poppinssemibold"
               android:text="2 AM - 4 AM"/>
       </LinearLayout>

        <Button
            android:id="@+id/btn_admin_broser_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:text="Browser"
            android:textSize="15sp"
            android:fontFamily="@font/poppinssemibold"
            android:backgroundTint="@color/lavender"/>
        <Button
            android:id="@+id/btn_user_feedback_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:text="Feedback"
            android:visibility="gone"
            android:textSize="15sp"
            android:fontFamily="@font/poppinssemibold"
            android:backgroundTint="@color/lavender"/>
    </LinearLayout>
</ScrollView>