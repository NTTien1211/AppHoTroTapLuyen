<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".gym.User_screen.User_PT_Inf_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@drawable/cnhat_boduoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_proIn4"
                android:background="@color/purple_nhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/profile_pic_image_view_chatMess"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="@color/white"
                android:padding="4dp"
                android:src="@drawable/person_icon" />

            <TextView
                android:id="@+id/User_pt_inormation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_pic_image_view_chatMess"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Username"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_margin="5dp"
                android:id="@+id/User_pt_layout_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/User_pt_inormation"
                android:orientation="horizontal">
<!--                <ImageView-->
<!--                    android:id="@+id/User_pt_rate"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:src="@drawable/baseline_star_24"-->
<!--                    />-->
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Number of people guided" />
                <TextView
                    android:id="@+id/User_Manager_pt_inormation"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/rednhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Experience (Year)" />
                <TextView
                    android:id="@+id/User_year_pt_inormation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/lanhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="13sp"
                    android:text="Daily mantra
                (Rate)" />
                <TextView
                    android:id="@+id/User_rate_pt_inormation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="PT INFORMATION: "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/purple_nhat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/baseline_turned_in_24"
                        />
                    <ImageView
                        android:id="@id/icon2"
                        android:layout_marginLeft="25dp"
                        android:layout_below="@id/icon1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/person_icon"/>
                    <TextView
                        android:layout_below="@id/icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:id="@+id/text1"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                    <TextView
                        android:id="@+id/Phone_ptIn_User"
                        android:layout_below="@id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0985664533"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dress"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="15sp"
                            android:layout_marginLeft="25dp"/>

                        <TextView
                            android:id="@+id/Dress_ptIn_User"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dress"
                            android:fontFamily="@font/poppinsregular"
                            android:textSize="15sp"
                            android:layout_marginLeft="25dp"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/lanhat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/baseline_turned_in_24"
                        />
                    <ImageView
                        android:id="@+id/icon_list_list"
                        android:layout_marginLeft="25dp"
                        android:layout_below="@id/icon3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_checklist_24"/>

                    <TextView
                        android:id="@+id/List_ptIn_User1"
                        android:layout_below="@+id/icon_list_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dregree"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                    <TextView
                        android:id="@+id/List_ptIn_dgree"
                        android:layout_below="@+id/List_ptIn_User1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dregree"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/rednhat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon8"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/baseline_turned_in_24"
                        />
                    <ImageView
                        android:id="@+id/icon9"
                        android:layout_marginLeft="25dp"
                        android:layout_below="@id/icon8"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_checklist_24"/>

                    <TextView
                        android:id="@+id/List_ptIn_User2"
                        android:layout_below="@+id/icon9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Prediction"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                    <TextView
                        android:id="@+id/List_ptIn_prize"
                        android:layout_below="@+id/List_ptIn_User2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Some short description of this type of report."
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_marginLeft="25dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/purple_nhat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon10"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/baseline_turned_in_24"
                        />
                    <ImageView
                        android:id="@+id/icon11"
                        android:layout_marginLeft="25dp"
                        android:layout_below="@id/icon10"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_checklist_24"/>

                    <TextView
                        android:id="@+id/List_ptIn_User4"
                        android:layout_below="@+id/icon11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                    <TextView
                        android:id="@+id/List_ptIn_User5"
                        android:layout_below="@+id/List_ptIn_User4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Some short description of this type of report."
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_marginLeft="25dp"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/Btn_Pt_User_Book"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Book"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/rounded_background"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/Btn_Pt_User_CHat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:backgroundTint="@color/rednhat"
                android:background="@drawable/rounded_background"
                android:textAllCaps="false"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>