<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".gym.User_screen.User_PT_Inf_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@drawable/cnhat_boduoi"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >
            <fragment
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                />

            <ImageView
                android:id="@+id/profile_pic_image_view_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/bg_circle"
                android:padding="4dp"
                android:src="@drawable/person_icon" />

            <TextView
                android:id="@+id/User_user_inormation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/profile_pic_image_view_profile"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:padding="2dp"
                android:layout_marginLeft="-10dp"
                android:background="@drawable/rounded_background2"
                android:text="Username"
                android:textSize="18sp" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="USER INFORMATION"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@drawable/cnhat_boca"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icoa"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_location_on_24"/>
                <TextView
                    android:layout_toRightOf="@id/icoa"
                    android:id="@+id/locationInfoTextView"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/User_Male_pt_inormation"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Phone" />
                <TextView
                    android:id="@+id/User_phone_user_inormation"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/rednhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Email" />
                <TextView
                    android:id="@+id/User_email_user_inormation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/purple_nhat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/baseline_turned_in_24"
                        />
                    <TextView
                        android:layout_below="@id/icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:id="@+id/text1"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                    <TextView
                        android:id="@+id/weight_ptIn_User"
                        android:layout_below="@id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0985664533"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/lanhat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/baseline_turned_in_24"
                        />


                    <TextView
                        android:id="@+id/List_ptIn_User1"
                        android:layout_below="@id/icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                    <TextView
                        android:id="@+id/Height_ptIn_dgree"
                        android:layout_below="@+id/List_ptIn_User1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dregree"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="15sp"
                        android:layout_marginLeft="25dp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/color_back_bmi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@color/lanhat"
                android:orientation="vertical">
                <TextView
                    android:text="BMI"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/BMI_user_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30.5"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="18sp"/>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_update_user_profile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lavender"
            android:text="Repair"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/baseline_add_24" />

    </LinearLayout>

</ScrollView>