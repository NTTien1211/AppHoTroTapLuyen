<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/whirk"
    tools:context=".gym.Admin.Admin_Over_Browser_Fragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BROWSER"
        android:textSize="20sp"
        android:fontFamily="@font/poppinssemibold"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/whirk"
        android:layout_height="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="Browser approve"
            android:layout_toLeftOf="@id/robot_json"
            android:textSize="18sp"
            android:textStyle="bold" />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:id="@+id/robot_json"
            android:layout_width="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_alignParentRight="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="200dp"
            android:visibility="visible"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="overadmin.json" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/recycle_browser_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>