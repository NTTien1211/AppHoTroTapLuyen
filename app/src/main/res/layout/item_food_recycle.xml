<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@drawable/rounded_background3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profile_pic_image_view_food"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@drawable/person_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_food_user_ca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="15sp"
                android:layout_marginLeft="25dp"
                />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/calo_food_ptIn_User"
                   android:layout_below="@id/text1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0985664533"
                   android:fontFamily="@font/poppinssemibold"
                   android:textSize="15sp"
                   android:layout_marginLeft="25dp"
                   />
               <TextView
                   android:layout_below="@id/text1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="/"
                   android:fontFamily="@font/poppinssemibold"
                   android:textSize="15sp"
                   android:layout_marginLeft="5dp"

                   />
               <TextView
                   android:id="@+id/unil_food_ptIn_User"
                   android:layout_below="@id/text1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="100"
                   android:fontFamily="@font/poppinssemibold"
                   android:textSize="15sp"
                   android:layout_marginLeft="5dp"
                   />
           </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>