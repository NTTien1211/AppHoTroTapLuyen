<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".gym.User_screen.User_PT_Inf_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@drawable/cnhat_boduoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/profile_pic_image_view_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_circle"
                android:padding="4dp"
                android:src="@drawable/person_icon" />

            <TextView
                android:id="@+id/User_user_inormation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_pic_image_view_profile"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Username"
                android:textSize="18sp" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="INFORMATION CV PTRAINER"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Experience year"
                android:layout_margin="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
            <EditText
                android:layout_margin="10dp"
                android:id="@+id/User_Name_repair_pt_inormation"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Phone" />
                <TextView
                    android:id="@+id/User_phone_user_inormation"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/rednhat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="Email" />
                <TextView
                    android:id="@+id/User_email_user_inormation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">
                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:background="@drawable/cnhat_boca"
                        android:backgroundTint="@color/purple_nhat"
                        android:fontFamily="@font/poppinsbold"
                        android:textSize="15sp"/>
                    <NumberPicker
                        android:id="@+id/verticalNumberPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:max="250"
                        android:min="130"
                        />
                </LinearLayout>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationView"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    app:lottie_rawRes="@raw/ptupdate"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

            </LinearLayout>

            <!-- NumberPicker ngang -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/purple_nhat"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Weight"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_toEndOf="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/valueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"/>
                    <SeekBar
                        android:layout_gravity="center"
                        android:id="@+id/decimalSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="1000"/>
                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Cretificate"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/cnhat_boca"
                android:backgroundTint="@color/purple_nhat"
                android:gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/User_cretificate_update_pt_inormation_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/person_icon" />
        </LinearLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:gravity="center"
          android:layout_margin="10dp"
          android:layout_gravity="center"
          android:padding="5dp"
          android:background="@drawable/cnhat_boca"
          android:backgroundTint="@color/purple_nhat"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/textprize"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Prize"
              android:layout_marginRight="10dp"
              android:gravity="center"
              android:fontFamily="@font/poppinsbold"
              android:textSize="15sp"/>
          <ImageButton
              android:id="@+id/add_prize"
              android:layout_toRightOf="@+id/textprize"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:src="@drawable/baseline_add_24"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_prize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/User_prize_update_pt_inormation"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_gravity="center"
                    android:background="@drawable/cnhat_boca"
                    android:backgroundTint="@color/purple_nhat"
                    android:gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/User_prize_update_pt_inormation_img"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:src="@drawable/person_icon" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_update_user_profile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lavender"
            android:text="Send Update"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/baseline_add_24" />

    </LinearLayout>

</ScrollView>